{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "allowJs": true
  },
  "files": ["index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/public/"]
}
